<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.help.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/about_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_keyboard_backspace_24"
            app:title="About" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="222dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="ark news icon"
                android:src="@drawable/icon_ark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="240dp"
                android:paddingHorizontal="10dp"
                android:text="@string/project_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="280dp"
                android:paddingHorizontal="10dp"
                android:text="@string/about_ark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="480dp"
                android:paddingHorizontal="10dp"
                android:text="@string/inspiration"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:paddingHorizontal="10dp"
                android:text="@string/about_inspiration" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="600dp"
                android:paddingHorizontal="20dp"
                android:text="@string/supervisor"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="640dp"
                android:contentDescription="Nahid sir image"
                android:src="@drawable/supervisor_nahid_sir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="640dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="10dp"
                android:text="@string/about_nahid_sir"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="750dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Developers"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="800dp"
                android:src="@drawable/dev_prashant_karna" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="800dp"
                android:layout_marginBottom="20dp"
                android:text="@string/about_prashant"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="930dp"
                android:src="@drawable/dev_karma_jimpa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="930dp"
                android:layout_marginBottom="20dp"
                android:text="@string/about_karma"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="1060dp"
                android:src="@drawable/dev_priyanka_roy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="1060dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="15dp"
                android:text="@string/about_priyanka"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="1190dp"
                android:src="@drawable/dev_amrito_das_tipu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="1190dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="40dp"
                android:text="@string/about_tipu"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1300dp"
                android:paddingLeft="60dp"
                android:text="@string/for_more_queries"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>